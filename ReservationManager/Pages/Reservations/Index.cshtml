@page
@model ReservationManager.Pages.Reservations.IndexModel
@{
    ViewData["Title"] = "Reservations";
}

<h1>Reservations</h1>

<form method="get">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Room Name</label>
            <input type="text" name="RoomFilter" value="@Model.RoomFilter" class="form-control"/>
        </div>
        <div class="form-group col-md-3">
            <label>Start Date</label>
            <input type="date" name="StartDateFilter" value="@Model.StartDateFilter?.ToString("yyyy-MM-dd")" class="form-control"/>
        </div>
        <div class="form-group col-md-3">
            <label>End Date</label>
            <input type="date" name="EndDateFilter" value="@Model.EndDateFilter?.ToString("yyyy-MM-dd")" class="form-control"/>
        </div>
        <div class="form-group col-md-3">
            <label>Room Capacity</label>
            <input type="number" name="CapacityFilter" value="@Model.CapacityFilter" class="form-control"/>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Room</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model.Reservations)
        {
            <tr>
                <td>@reservation.Room.Name</td>
                <td>@reservation.StartDate</td>
                <td>@reservation.EndDate</td>
                <td>@reservation.User.UserName</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Reservations/Edit?id=@reservation.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Reservations/Delete?id=@reservation.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
